{
    "name": "rng-consciousness-app",
    "version": "1.0.0",
    "description": "Personal RNG Consciousness Experiment App - A research-grade application replicating PEAR laboratory and Global Consciousness Project methodology",
    "main": "dist/main/main.js",
    "homepage": "./",
    "author": "RNG Consciousness Research",
    "license": "MIT",
    "private": true,
    "scripts": {
        "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
        "dev:renderer": "vite",
        "dev:main": "tsc -p tsconfig.main.json && electron dist/main/main.js",
        "build": "npm run build:renderer && npm run build:main",
        "build:renderer": "vite build",
        "build:main": "tsc -p tsconfig.main.json",
        "dist": "npm run build && electron-builder",
        "dist:dir": "npm run build && electron-builder --dir",
        "test": "jest",
        "test:watch": "jest --watch",
        "lint": "eslint src --ext .ts,.tsx",
        "lint:fix": "eslint src --ext .ts,.tsx --fix",
        "format": "prettier --write \"src/**/*.{ts,tsx,json}\"",
        "typecheck": "tsc --noEmit",
        "demo": "npx ts-node src/core/demo.ts"
    },
    "dependencies": {
        "@types/better-sqlite3": "^7.6.13",
        "better-sqlite3": "^11.10.0",
        "chart.js": "^4.4.1",
        "date-fns": "^3.2.0",
        "react": "^18.2.0",
        "react-chartjs-2": "^5.2.0",
        "react-dom": "^18.2.0",
        "simple-statistics": "^7.8.3",
        "uuid": "^9.0.1"
    },
    "devDependencies": {
        "@types/jest": "^29.5.11",
        "@types/node": "^20.11.5",
        "@types/react": "^18.2.48",
        "@types/react-dom": "^18.2.18",
        "@types/uuid": "^9.0.7",
        "@typescript-eslint/eslint-plugin": "^6.19.0",
        "@typescript-eslint/parser": "^6.19.0",
        "@vitejs/plugin-react": "^4.2.1",
        "concurrently": "^8.2.2",
        "electron": "^28.2.0",
        "electron-builder": "^24.9.1",
        "eslint": "^8.56.0",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "jest": "^29.7.0",
        "prettier": "^3.2.4",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.3.3",
        "vite": "^5.0.12",
        "vite-plugin-electron": "^0.28.2"
    },
    "build": {
        "appId": "com.rng-consciousness.app",
        "productName": "RNG Consciousness Experiment",
        "directories": {
            "output": "release"
        },
        "files": [
            "dist/**/*",
            "node_modules/**/*"
        ],
        "mac": {
            "category": "public.app-category.education",
            "target": "dmg"
        },
        "win": {
            "target": "nsis"
        },
        "linux": {
            "target": "AppImage"
        }
    }
}
